@model IEnumerable<BSAF16072021.Models.TopicTrainer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/users/Views/Shared/_UserLayout.cshtml";
}

<h2>List of topics and trainers</h2>

<table class="table">
    <tr>
        <th>
            Topic name
        </th>
        <th>
            Trainer name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Topic.topic_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trainer.trainer_name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.id_topictrainer })
        </td>
    </tr>
}

</table>
