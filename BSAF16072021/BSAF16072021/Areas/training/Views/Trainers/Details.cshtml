@model BSAF16072021.Models.Trainer

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/training/Views/Shared/_TrainingLayout.cshtml";
}

<h4><center>Information of the trainer</center></h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Trainer username
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_name)
        </dd>

        <dt>
            Trainer password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_password)
        </dd>

        <dt>
            Trainer email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_email)
        </dd>

        <dt>
            Telephone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_telephone)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trainer_address)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.trainer_id }, new { @class = "btn btn-xs btn-warning" })
    @Html.ActionLink("Back to List", "Index")
</p>
